<%layout('/layouts/boilerplate')%>
<div class="row mt-3">
    <div class="col-8 offset-3">
        <h3><%=listing.title%></h3>
        </div>
        <div class="card col-6 offset-3 show-card no-border">
            <img src="<%=listing.image.url%>" class="card-img-top show-img" alt="listing_image">
            <div class="card-body mt-2">
                <p class="card-text">Owned by <i><%=listing.owner.username %></i></p>
              <p class="card-text" >
                <%=listing.description%><br>
                &#8377;<%=listing.price.toLocaleString("en-IN")%> <br>
                <%=listing.location%> <br>
                <%=listing.country%> 
            </p>
        </div>
    </div>
    <br>
    <% if(currUser && currUser._id.equals(listing.owner._id)) {%>
    <div class="btns mb-2">
        <a href="/listings/<%=listing._id%>/edit" class="btn btn-dark col-1 offset-3 edit-btn w-10" style="height: 40px;">Edit</a>
        <br> <br>
        <form method="POST" action="/listings/<%=listing._id%>?_method=DELETE">
           <button class="btn btn-dark offset-5 w-20"  style="height: 40px; background-color:darkred;">Delete</button>
        </form>
    </div>
    <% } %>
     <div class="col-8 offset-3 mb-3">
        <%if(currUser){%>
        <h4>Leave a Review</h4>
        <form action="/listings/<%= listing.id %>/reviews" method="POST" novalidate class="needs-validation">
            <div class="mb-3 mt-3">
                <label for="rating" class=""form-label>Rating</label>
                <input name="review[rating]" type="range" id="rating" min="1" max="5" class="form-range"/> 
            </div>
            <div class="mb-3 mt-3">
                <label for="comment" class="form-label" >Comments</label>
                <textarea name="review[comment]" class="form-control" id="comment" col="30" row="5" required></textarea> 
                <div class="invalid-feedback">Please add some comment for review</div>
            </div>
            <button class="btn btn-outline-dark">Submit</button>
        </form>
        <%}%>
         <hr />
            <h4>All Reviews</h4>
             <div class="row">
        <% for(review of listing.reviews){ %>
            <div class="card col-5 ms-3 mb-3">
                <div class="card-body">
                    <h5 class="card-title mt-2" style="margin-left: -10px; ">Alaistair</h5>
                    <p class="card-text">
                        <%=review.comment%>
                    </p>
                    <p class="card-text">
                        <%=review.rating%> stars
                    </p>
                    <form class="mb-3 mt-3" style="margin-left: -10px" method="POST" action="/listings/<%=listing._id%>/reviews/<%=review._id%>?_method=DELETE">
                        <button class="btn btn-sm btn-dark" style="background-color:darkred">Delete</button>
                    </form>
                </div>
            </div>
            <%}%>
    </div>
     </div>   
</div>
    