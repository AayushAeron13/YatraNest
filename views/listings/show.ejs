<%layout('/layouts/boilerplate')%>
<div class="row mt-3">
    <div class="col-8 offset-3">
        <h3>Listing details</h3>
        </div>
        <div class="card col-6 offset-3 show-card">
            <img src="<%=listing.image.url%>" class="card-img-top show-img" alt="listing_image">
            <div class="card-body mt-2">
              <p class="card-text"><b><%=listing.title%></b><br>
                <%=listing.description%><br>
                &#8377;<%=listing.price.toLocaleString("en-IN")%> <br>
                <%=listing.location%> <br>
                <%=listing.country%> 
            </p>
        </div>
    </div>
    <br>
    <div class="btns mb-5">
        <a href="/listings/<%=listing._id%>/edit" class="btn btn-dark col-1 offset-3 edit-btn w-10" style="height: 40px;">Edit</a>
        <br> <br>
        <form method="POST" action="/listings/<%=listing._id%>?_method=DELETE">
           <button class="btn btn-dark offset-5 w-20"  style="height: 40px; background-color:darkred;">Delete</button>
        </form>
    </div>
        
</div>
    